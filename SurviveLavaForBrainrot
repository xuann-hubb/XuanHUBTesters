-- ================= UTILITIES SECTION =================
local UtilitiesSection = MainTab:Section({
    Title = "Utilities",
    TextXAlignment = Enum.TextXAlignment.Left,
    Opened = true,
})

-- Infinite Jump Toggle
UtilitiesSection:Toggle({
    Title = "Infinite Jump",
    Description = "Jump infinitely without cooldown",
    Value = savedSettings.infJump,
    Callback = function(state)
        infJump = state
        savedSettings.infJump = state
        saveSettings(savedSettings)
        
        WindUI:Notify({
            Title = "Infinite Jump",
            Content = state and "Infinite Jump enabled!" or "Infinite Jump disabled",
            Icon = state and "check" or "x",
            Duration = 2,
        })
    end,
})

-- Infinite Jump Logic
local UserInputService = game:GetService("UserInputService")
UserInputService.JumpRequest:Connect(function()
    if infJump then
        local char = player.Character
        if char and char:FindFirstChild("Humanoid") then
            char.Humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
        end
    end
end)

-- ================= AUTO TAB =================

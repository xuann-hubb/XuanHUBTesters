        shopRefreshInterval = tonumber(value) or 5
        if shopRefreshInterval < 5 then
            shopRefreshInterval = 5
            WindUI:Notify({ Title = "Shop", Content = "Minimum auto-buy delay is 5s; set to 5s", Icon = "info", Duration = 2 })
        end
    end,
})

